echo "   Computer Name: {{ $computerName }}"
echo "   Hardware Model: {{ $hardwareModel }}"
echo "   Device Type: {{- if $isLaptop }} Laptop{{- else if $isDesktop }} Desktop{{- else }} Unknown{{- end }}"

brew bundle --file=/dev/stdin <<EOF

# Gemeinsame Software
tap "homebrew/services"
tap "nikitabobko/tap"

brew "chezmoi"
brew "mas"
brew "node"
brew "neovim"

cask "1password"
